<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- @author Chris Zachariah (cvz2) -->

<!-- Create a VBox Container that will hold my three sections of info. -->

<VBox id="MainBackground" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <opaqueInsets>
        <Insets left="100.0" />
    </opaqueInsets>

    <Separator id="TopSeperator" prefHeight="27.0" prefWidth="540.0" />

    <!-- This top GridPane will be able to hold the labels and text fields for user input. -->
    <GridPane id="TopGrid" prefHeight="123.0" prefWidth="540.0">
        <!-- Grid constraint 3x1 -->
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="700.0" minWidth="10.0" prefWidth="700.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="37.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="44.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="47.0" minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <!-- First Name label and text box -->
        <Label id="FirstNameLabel" contentDisplay="RIGHT" prefHeight="23.0" prefWidth="202.0" text="First Name:" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <font>
                <Font size="18.0" />
            </font>
            <padding>
                <Insets left="100.0" />
            </padding>
        </Label>
        <TextField id="FirstNameText" GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="FirstNameText">
            <GridPane.margin>
                <Insets left="200.0" right="50.0" />
            </GridPane.margin>
            <font>
                <Font size="18.0" />
            </font>
        </TextField>

        <!-- Last Name label and text box -->
        <Label id="LastNameLabel" contentDisplay="RIGHT" prefHeight="23.0" prefWidth="202.0" text="Last Name:" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <font>
                <Font size="18.0" />
            </font>
            <padding>
                <Insets left="100.0" />
            </padding>
        </Label>
        <TextField id="LastNameText" GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="LastNameText">
            <GridPane.margin>
                <Insets left="200.0" right="50.0" />
            </GridPane.margin>
            <font>
                <Font size="18.0" />
            </font>
        </TextField>

        <!-- Number of Credits label and text box -->
        <Label id="NumCreditsLabel" contentDisplay="RIGHT" prefHeight="23.0" prefWidth="202.0" text="Number of Credits:" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <font>
                <Font size="18.0" />
            </font>
            <padding>
                <Insets left="45.0" />
            </padding>
        </Label>
        <TextField id="NumCreditsText" GridPane.columnIndex="0" GridPane.rowIndex="2" fx:id="NumCreditsText">
            <GridPane.margin>
                <Insets left="200.0" right="50.0" />
            </GridPane.margin>
            <font>
                <Font size="18.0" />
            </font>
        </TextField>
    </GridPane>

    <Separator id="MiddleSeperator" prefHeight="26.0" prefWidth="600.0" />

    <!-- This middle grid will hold the options for type of students with other attributes.
    Also hold the different actions that can be performed by the user once enough info about the students is taken in.
    -->
    <GridPane id="MiddleGrid" prefHeight="163.0" prefWidth="550.0">
        <!-- Grid constraint 2x1 -->
      <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="529.0" minWidth="10.0" prefWidth="524.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="266.0" minWidth="10.0" prefWidth="176.0" />
      </columnConstraints>
      <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>

        <!-- use stack pane to put multiple attributes for the user on top and use the pane as a good background. -->
        <StackPane id="OptionsStack" blendMode="DARKEN" depthTest="DISABLE" prefHeight="143.0" prefWidth="368.0" style="-fx-border-color: grey;" GridPane.columnIndex="0" GridPane.rowIndex="0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
            <GridPane id="OptionsGrid" prefHeight="133.0" prefWidth="573.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="226.0" minWidth="10.0" prefWidth="179.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="204.0" minWidth="10.0" prefWidth="181.0" />
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="142.0" minWidth="10.0" prefWidth="142.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>

                <!-- Radio Button for INSTATE -->
               <RadioButton id="InstateRadioButton" contentDisplay="CENTER" mnemonicParsing="false" text="INSTATE" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#InStateRadioButtonClicked" fx:id="InstateRadioButton">
               <font>
                  <Font size="16.0" />
               </font>
               <GridPane.margin>
                  <Insets left="25.0" />
               </GridPane.margin>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor></RadioButton>

                <!-- Radio Button for OUTSTATE -->
                <RadioButton id="OutStateRadioButton" contentDisplay="CENTER" mnemonicParsing="false" text="OUTSTATE" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#OutStateRadioButtonClicked" fx:id="OutStateRadioButton">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="25.0" />
                    </GridPane.margin>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor></RadioButton>

                <!-- Radio Button for INTERNATIONAL -->
                <RadioButton id="InternationalRadioButton" contentDisplay="CENTER" mnemonicParsing="false" text="INTERNATIONAL" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#InternationalRadioButtonClicked" fx:id="InternationalRadioButton">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="25.0" />
                    </GridPane.margin>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor></RadioButton>

                <!-- Check Box for Funding -->
                <CheckBox id="FundingCheck" mnemonicParsing="false" text="Funding" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#fundingBoxClicked" fx:id="FundingCheck">
               <font>
                  <Font size="16.0" />
               </font>
               <GridPane.margin>
                  <Insets left="15.0" />
               </GridPane.margin></CheckBox>

                <!-- Check Box for Tri-State Check -->
                <CheckBox id="TriStateCheck" mnemonicParsing="false" text="Tri-State Student" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#triStateBoxClicked" fx:id="TriStateCheck">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="15.0" />
                    </GridPane.margin></CheckBox>

                <!-- Check Box for Exchange Check -->
                <CheckBox id="ExchangeCheck" mnemonicParsing="false" text="Exchange Student" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#exchangeBoxClicked" fx:id="ExchangeCheck">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <GridPane.margin>
                        <Insets left="15.0" />
                    </GridPane.margin></CheckBox>
            <TextField id="FundingAmount" promptText="\$" GridPane.columnIndex="2" GridPane.rowIndex="0" fx:id="FundingAmount">
               <font>
                  <Font size="18.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="3.0" left="3.0" right="5.0" top="3.0" />
               </GridPane.margin>
            </TextField>

            </GridPane>
        </StackPane>

        <!-- Grid to put User Option Buttons -->
        <GridPane id="OptionButtonGrid" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <!-- Add Button -->
            <Button id="AddButton" mnemonicParsing="false"  prefHeight="32.0" prefWidth="138.0" text="Add" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#addNewStudent" fx:id="AddButton">
            <font>
               <Font size="16.0" />
            </font>
            <GridPane.margin>
               <Insets left="15.0" />
            </GridPane.margin></Button>

            <!-- Remove Button -->
            <Button id="RemoveButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="138.0" text="Remove" GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="RemoveButton">
                <font>
                    <Font size="16.0" />
                </font>
                <GridPane.margin>
                    <Insets left="15.0" />
                </GridPane.margin></Button>

            <!-- Print Button -->
            <Button id="PrintButton" mnemonicParsing="false" prefHeight="32.0" prefWidth="138.0" text="Print" GridPane.columnIndex="0" GridPane.rowIndex="2" fx:id="PrintButton">
                <font>
                    <Font size="16.0" />
                </font>
                <GridPane.margin>
                    <Insets left="15.0" />
                </GridPane.margin></Button>

        </GridPane>

    </GridPane>

    <Separator id="BottomSeperator" layoutX="10.0" layoutY="137.0" prefHeight="16.0" prefWidth="700.0" />

    <!-- Text area where any output and error messages go to the user from the program. -->
   <TextArea id="TextOutput" editable="false" minHeight="200.0" minWidth="650.0" prefHeight="500.0" prefWidth="650.0" style="-fx-background-color: grey;" fx:id="TextOutput">
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
      <font>
         <Font size="18.0" />
      </font>
   </TextArea>

</VBox>
